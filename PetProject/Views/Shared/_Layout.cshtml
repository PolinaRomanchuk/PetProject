<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetProject.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    @RenderSection("JScript", false)
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="header-container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img class="header-logo" src="/images/cat_logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="header--bar__user">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Выйти</a>
                    </div>
                }
                else
                {
                    <div class="header--bar__user">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Login">Войти</a>
                    </div>
                }
            </div>
        </nav>
    </header>
   
    <div class="navigation-leftColumn">
        <div class="item-of-column">
            <a asp-controller="Home" asp-action="Index"> <img class="navigation-logo" src="/images/home.png" /></a>
        </div>
        <div class="item-of-column">
            <a asp-controller="Home" asp-action="Index"> <img class="navigation-logo" src="/images/other.png" /></a>
        </div>
        <div class="item-of-column">
            <a asp-controller="Home" asp-action="Index"> <img class="navigation-logo" src="/images/messages.png" /></a>
        </div>
        <div class="item-of-column">
            <a asp-controller="Home" asp-action="Index"> <img class="navigation-logo" src="/images/icon.png" /></a>
        </div>
        <div class="item-of-column">
            <a asp-controller="Home" asp-action="Index"> <img class="navigation-logo" src="/images/icon2.png" /></a>
        </div>
        <div class="item-of-column">
            <a asp-controller="Home" asp-action="Index"> <img class="navigation-logo" src="/images/icon3.png" /></a>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            &copy; 2024 - PetProject
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
